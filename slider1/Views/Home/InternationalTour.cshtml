
@{
    ViewBag.Title = "InternationalTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="navbar">
    <h2 id="tab_name" style="color:white; text-align:center">Search International Tour Packages</h2>
    <br />
    <div class="row-search">
        <div class="col-md-2">
            <label style="color:white">No Of Days</label>
            <select name="NoOfDays" class="form-control">
                <option value="">Select Days</option>
                <option value="7">0 To 7 days</option>
                <option value="15">8 To 15 days</option>
                <option value="21">16 To 21 days</option>
                <option value="28">22 To 28 days</option>
            </select>
        </div>
        <div class="col-md-2">
            <label style="color:white">Select Class</label>
            <select name="SelectClass" class="form-control">
                <option value="">Select Class</option>
                <option value="Royal Class">Royal Class</option>
                <option value="5Star">5 Star</option>
                <option value="4Star">4 Star</option>
                <option value="3Star">3 Star</option>
                <option value="Platinum">Platinum</option>
                <option value="Gold">Gold</option>
                <option value="Silver">Silver</option>
                <option value="Economy">Economy</option>
            </select>
        </div>
        <div class="col-md-3">
            <label style="color:white"> City</label>
            <select name="City" class="form-control">
                <option value="">Select City</option>
                <option value="1">Lahore</option>
                <option value="2">Karachi</option>
                <option value="3">Islamabad/Rawalpindi</option>
                <option value="4">Peshawar</option>
                <option value="5">Quetta</option>
                <option value="6">Faisalabad</option>
                <option value="7">Multan</option>
                <option value="8">Sialkot</option>
                <option value="9">DG Khan</option>
                <option value="10">Others (Coming Soon)</option>

            </select>
        </div>
        <div class="col-md-3">
            <label style="color:white">Coutry</label>
            <select name="SelectArea" class="form-control">
                <option value="">Select Country</option>
                <option value="Saudia">Saudia Arabia</option>
                <option value="Dubai">Dubai</option>
                <option value="Malaysia">Malaysia</option>
                <option value="Thailand">Thailand</option>
                <option value="Singapore">Singapore</option>
                <option value="Bahrian">Bahrian</option>
                <option value="Muscat">Muscat</option>
                <option value="Oman">Oman</option>
                <option value="Qatar">Qatar</option>
                <option value="Turkey">Turkey</option>
                <option value="China">China</option>
            </select>
        </div>
        <div class="col-md-2" style="padding-top:20px; padding-left:50px; ">
            <button class="btn btn-primary btn-md" type="submit" onclick="@("window.location.href='" + @Url.Action("SearchInternationalTour", "Home") + "'")" ;>Search</button>
        </div>
    </div>

</div>

<section class="fix">
    <div class="container4">
        <a href="#">  <h1 style="color:white">VISIT US</h1></a>
</div>
</section>